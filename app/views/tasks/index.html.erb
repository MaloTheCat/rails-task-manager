<h1>My tasks</h1>

<ol>
  <% @tasks.each do |task|  %>
    <li>
      <%= link_to "[#{task.completed}] - #{task.title}, #{task.details}", task_path(task) %>
      <button> <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }%>
      </button>
    </li>
  <% end %>
</ol>
<%= link_to "Add a new task", new_task_path %>
